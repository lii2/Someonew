            />

        <Button
            android:id="@+id/interestbutton15"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:layout_flexBasisPercent="45%"
            android:layout_margin="3dip"
            android:background="@drawable/politics"
            />

        <Button
            android:id="@+id/rock"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:layout_flexBasisPercent="45%"
            android:layout_margin="3dip"
            android:background="@drawable/rock"
            />

        <Button
            android:id="@+id/soccer"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:layout_flexBasisPercent="45%"
            android:layout_margin="3dip"
            android:background="@drawable/soccer"
            />

        <Button
            android:id="@+id/technology"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:layout_flexBasisPercent="45%"
            android:layout_margin="3dip"
            android:background="@drawable/technology"
            />

        <Button
            android:id="@+id/videogames"
            android:layout_width="80dip"
            android:layout_height="80dip"
            app:layout_flexBasisPercent="45%"
            android:layout_margin="3dip"
            android:background="@drawable/videogames"
            />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>
